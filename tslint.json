{
  "rulesDirectory": ["./node_modules/tslint-microsoft-contrib"],
  "extends": [
    "tslint-microsoft-contrib/recommended_ruleset",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "align": [true, "parameters", "statements"],
    "export-name": [0],
    "import-name": [0],
    "max-line-length": [true, 100],
    "missing-jsdoc": [0],
    "no-angle-bracket-type-assertion": true,
    "no-any": false,
    "no-unsafe-any": false,
    "no-cookies": [0],
    "no-inner-html": false,
    "no-default-export": [0],
    "no-empty-line-after-opening-brace": true,
    "no-http-string": false,
    "no-relative-imports": [0],
    "no-require-imports": false,
    "no-unused-variable": [true, { "ignore-pattern": "^React$" }],
    "ordered-imports": false,
    "prefer-type-cast": false,
    "quotemark": [true, "single", "jsx-double"],
    "switch-default": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "variable-name": [true, "ban-keywords"],
    "react-iframe-missing-sandbox": false,
    "react-tsx-curly-spacing": false,
    "react-a11y-anchors": false,
    "mocha-no-side-effect-code": false,
    "strict-boolean-expressions": false,
    "typedef": false,
    "completed-docs": false,
    "member-ordering": [
      true,
      {
        "order": ["protected-instance-method", "public-instance-method"]
      }
    ],
    "no-void-expression": false,
    "prefer-method-signature": false,
    "interface-name": [true, "never-prefix"],
    "newline-before-return": false,
    "no-multiline-string": false,
    "await-promise": false,
    "react-unused-props-and-state": [
      true,
      {
        "props-interface-regex": "Props$",
        "state-interface-regex": "State$"
      }
    ],
    "function-name": [
      true,
      {
        "method-regex": "^[a-z][\\w\\d]+$",
        "private-method-regex": "^[a-z][\\w\\d]+$",
        "protected-method-regex": "^[a-z][\\w\\d]+$",
        "static-method-regex": "^[a-zA-Z\\d]+$",
        "function-regex": "^[a-z][\\w\\d]+$"
      }
    ],
    "react-no-dangerous-html": false,
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "no-implicit-dependencies": false,
    "no-submodule-imports": [
      true,
      "next/document",
      "next/router",
      "next/head",
      "next/link",
      "phox/typings",
      "aphrodite/no-important",
      "react-dom/server"
    ],
    "no-non-null-assertion": false,
    "no-null-keyword": false
  }
}
